    "@packasso/style-eslint-prettier",
    "@packasso/release-zx-semrel",
    "@packasso/test-jest"
  ],
  "scripts": {
    "test:jest": "jest",
    "build": "packasso build",
    "lint": "packasso lint",
    "format": "packasso format",
    "test": "packasso test"
  },
  "dependencies": {
    "@qiwi/common-formatters": "^1.2.1",
    "@qiwi/pijma-core": "workspace:*",
    "@qiwi/pijma-desktop": "workspace:*",
    "@types/react-js-pagination": "^3.0.4",
    "@types/react-table": "^7.7.12",
    "date-fns": "^2.29.2",
    "react-day-picker": "^8.2.0",
    "react-dropzone": "^14.2.2",
    "react-table": "^7.8.0"
  },
  "devDependencies": {
    "@packasso/build-ts-swc": "0.15.7",
    "@packasso/dev-license": "0.8.5",
    "@packasso/dev-ts": "0.15.5",
    "@packasso/release-zx-semrel": "0.14.5",
    "@packasso/style-eslint-prettier": "0.14.5",
    "@packasso/test-jest": "0.15.7",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.37",
    "@swc/helpers": "0.4.14",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.4.0",
    "@types/react-test-renderer": "^18.0.0",
    "concurrently": "7.6.0",
    "css-loader": "6.7.1",
    "eslint": "8.35.0",
    "eslint-config-qiwi": "2.0.9",
    "fast-glob": "3.2.11",
    "file-loader": "6.2.0",
    "globby-cp": "1.1.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "prettier": "2.8.4",
    "prettier-config-qiwi": "2.0.1",
    "react-i18next": "^11.18.5",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "4.2.0",
    "style-loader": "3.3.1",
    "tsc-esm-fix": "2.20.12",
    "typescript": "4.9.5",
    "webpack": "5.75.0"
  },
  "peerDependencies": {
    "react-i18next": "^11.18.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/pijma.git"
  },
  "bugs": {
    "url": "https://github.com/qiwi/pijma/issues"
  },
  "homepage": "https://github.com/qiwi/pijma/#readme",
  "eslintConfig": {
    "rules": {
      "no-constant-condition": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "react/no-children-prop": "off",
      "react/no-find-dom-node": "off",
      "sonarjs/cognitive-complexity": "off",
      "sonarjs/no-duplicate-string": "off",
      "unicorn/no-negated-condition": "off",
      "unicorn/no-new-array": "off",
      "unicorn/prefer-add-event-listener": "off",
      "unicorn/prefer-dom-node-append": "off",
      "unicorn/prefer-dom-node-remove": "off",
      "unicorn/prefer-logical-operator-over-ternary": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-optional-catch-binding": "off",
      "unicorn/prefer-regexp-test": "off",
      "unicorn/prefer-set-has": "off",
      "unicorn/prefer-spread": "off",
      "unicorn/prefer-string-slice": "off"
    },
    "extends": "eslint-config-qiwi"
  },
  "license": "MIT",
  "type": "module",
  "main": "./target/cjs/index.cjs",
  "module": "./target/esm/index.mjs",
  "types": "./target/dts/index.d.ts",
  "exports": {
    ".": {
      "require": "./target/cjs/index.cjs",
      "import": "./target/esm/index.mjs",
      "types": "./target/dts/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "target/cjs/**/*",
    "target/esm/**/*",
    "target/dts/**/*"
  ],
  "prettier": "prettier-config-qiwi",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "cmd": "yarn",
    "changelog": "changelog"
  }
}
